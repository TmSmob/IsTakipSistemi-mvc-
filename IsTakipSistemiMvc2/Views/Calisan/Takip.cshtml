
@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";
    @model  IsTakipSistemiMvc2.Models.IsDurumModel
}

<div class="container" mt-5>
    @foreach (var isDurum in Model.isDurumlar)
    {

            <div class="card">
                <div class="card-header bg-black text-center text-white text-center">
                    @isDurum.isBaslik
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Yapilan Tarih: @isDurum.isAciklama</li>
                        <li class="list-group-item">Iletilen Tarih: @isDurum.iletilenTarih</li>
                        <li class="list-group-item">Yapilan Tarih:@isDurum.yapilanTarih</li>
                        <li class="list-group-item">İş Durumu:@isDurum.durumAd</li>
                        <li class="list-group-item">İş Yorumu:@isDurum.isYorum</li>
                    </ul>
                </div>
            </div>
            <br />

        
    }
</div>