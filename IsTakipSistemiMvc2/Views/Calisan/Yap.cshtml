
@{
    ViewBag.Title = "Yap";
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";
}
<div class="container mt-5">
    @foreach (var i in ViewBag.Isler)
    {
    using (Html.BeginForm("Yap", "Calisan", FormMethod.Post))
                {
                    <div class="card">
                        <div class="card-header bg-black text-center text-white text-center">
                            @i.isBaslik
                        </div>
                        <div class="card-body">
                            <input  type="hidden" name="isId" value="@i.isId"/>
                            <div class="mb-3">Is Aciklamasi: @i.isAciklama</div>
                            <div class="mb-3">
                                <label for="isYorum" class="form-label"> Yorum Giriniz:</label>
                                <input type="text" class="form-control" name="isYorum" id="isYorum">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-success">Tamamla</button>
                        </div>
                    </div>
                    <br/>
                }
    }
</div>
