
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
    @model IEnumerable<IsTakipSistemiMvc2.Models.ToplamIs>
}

<h2>@ViewBag.birimAd birimi icin yetkilisiniz</h2>
<div class="row mb-3">
<div class="col">
    @Html.ActionLink("Ayin Elemani", "AyinElemani", "Yonetici", new {}, new {@class="btn btn-info w-50 mx-5"})
</div>
</div>
<div class="container mt-5">
    <ul class="list-group w-50 mx-5">
        <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-primary">
            @ViewBag.birimAd birimi icin calisanlarin toplam yapilan isleri
        </li>
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.personelAdSoyad
                <span class="badge bg-primary rounded-pill">Yapilan Is Toplami : @item.toplamIs</span>
            </li>
        }
    </ul>
</div>

