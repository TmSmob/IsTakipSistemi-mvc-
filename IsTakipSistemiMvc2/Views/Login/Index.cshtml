
@{
    Layout = null;
}


<!doctype html>
<html lang="tr" data-bs-theme="auto">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Iş Takip Sistemi Giriş</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sign-in.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">


    <main class="form-signin w-100 m-auto">

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {


            <h1 class="h3 mb-3 fw-normal">Is Takip Sistemi Giris Sayfasi</h1>
            <br />
            <div class="form-floating">
                <input type="text" class="form-control" id="kullaniciAd" name="kullaniciAd">
                <label for="kullaniciAd">Kullanici Adiniz</label>
            </div>
            <br />
            <div class="form-floating">
                <input type="password" class="form-control" id="parola" name="parola">
                <label for="parola">Sifre</label>
            </div>
            <br />
            <button class="btn btn-primary w-100 py-2" type="submit">Giris</button>
            <br /><br />
            @*<p>
                @ViewBag.mesaj
            </p>*@
            if (ViewBag.mesaj != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.mesaj
                </div>
            }

        }
    </main>
</body>
</html>
